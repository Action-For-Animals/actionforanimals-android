<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- iOS-style Settings Theme -->
    <style name="AppTheme.Settings" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#2E8C2E</item>
        <item name="colorPrimaryDark">#1D5F15</item>
        <item name="colorAccent">#2E8C2E</item>
        <item name="colorSecondary">#2E8C2E</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.iOS</item>
        <item name="actionBarTheme">@style/ActionBar.Settings</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorControlActivated">#2E8C2E</item>
        <item name="colorControlHighlight">#2E8C2E</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
    </style>

    <!-- iOS-style Preference Theme -->
    <style name="PreferenceThemeOverlay.iOS" parent="PreferenceThemeOverlay">
        <item name="preferenceCategoryTitleTextAppearance">@style/PreferenceCategoryTitleTextAppearance.iOS</item>
        <item name="preferenceCategoryStyle">@style/PreferenceCategory.Card</item>
        <item name="preferenceStyle">@style/Preference.iOS</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:background">@color/background</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorControlActivated">#2E8C2E</item>
        <item name="colorAccent">#2E8C2E</item>
        <item name="switchPreferenceStyle">@style/SwitchPreference.iOS</item>
    </style>

    <!-- iOS-style Preference Category Title -->
    <style name="PreferenceCategoryTitleTextAppearance.iOS" parent="Preference.Category.Material">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#3C3C43</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- iOS-style Individual Preference -->
    <style name="Preference.iOS" parent="Preference.Material">
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <!-- ActionBar for Settings with white text -->
    <style name="ActionBar.Settings" parent="ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="colorPrimary">#2E8C2E</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="android:background">#2E8C2E</item>
        <item name="displayOptions">showTitle|showCustom</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Switch styling -->
    <style name="Switch.iOS" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">#2E8C2E</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="colorControlNormal">#E5E5EA</item>
        <item name="android:alpha">1.0</item>
        <item name="android:enabled">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- SwitchPreference styling -->
    <style name="SwitchPreference.iOS" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="android:layout">@layout/preference_ios_switch_clean</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
        <item name="android:enabled">true</item>
    </style>

    <!-- Card-style PreferenceCategory -->
    <style name="PreferenceCategory.Card" parent="Preference.Category.Material">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/preference_category_card</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Floating Settings theme for overlay effect -->
    <style name="AppTheme.Settings.Floating" parent="AppTheme.Settings">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/FloatingWindowAnimation</item>
    </style>

    <!-- Floating window animation -->
    <style name="FloatingWindowAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>