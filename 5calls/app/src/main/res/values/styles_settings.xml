<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- iOS-style Settings Theme -->
    <style name="AppTheme.Settings" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#2E8C2E</item>
        <item name="colorPrimaryDark">#1D5F15</item>
        <item name="colorAccent">#2E8C2E</item>
        <item name="colorSecondary">#2E8C2E</item>
        <item name="android:windowBackground">#F2F2F7</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.iOS</item>
        <item name="actionBarTheme">@style/ActionBar.Settings</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorControlActivated">#2E8C2E</item>
        <item name="colorControlHighlight">#2E8C2E</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
    </style>

    <!-- iOS-style Preference Theme -->
    <style name="PreferenceThemeOverlay.iOS" parent="PreferenceThemeOverlay">
        <item name="preferenceCategoryTitleTextAppearance">@style/PreferenceCategoryTitleTextAppearance.iOS</item>
        <item name="preferenceStyle">@style/Preference.iOS</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:background">#F2F2F7</item>
        <item name="android:colorBackground">#F2F2F7</item>
        <item name="colorControlActivated">#2E8C2E</item>
        <item name="colorAccent">#2E8C2E</item>
        <item name="switchPreferenceStyle">@style/SwitchPreference.iOS</item>
    </style>

    <!-- iOS-style Preference Category Title -->
    <style name="PreferenceCategoryTitleTextAppearance.iOS" parent="Preference.Category.Material">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#3C3C43</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- iOS-style Individual Preference -->
    <style name="Preference.iOS" parent="Preference.Material">
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <!-- ActionBar for Settings with white text -->
    <style name="ActionBar.Settings" parent="ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="colorPrimary">#2E8C2E</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="android:background">#2E8C2E</item>
    </style>

    <!-- Switch styling -->
    <style name="Switch.iOS" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">#2E8C2E</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="colorControlNormal">#E5E5EA</item>
        <item name="android:alpha">1.0</item>
    </style>

    <!-- SwitchPreference styling -->
    <style name="SwitchPreference.iOS" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="android:layout">@layout/preference_ios_switch_clean</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
        <item name="android:enabled">true</item>
    </style>

</resources>