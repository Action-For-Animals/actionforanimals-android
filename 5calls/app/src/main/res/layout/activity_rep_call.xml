<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/rep_call_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Issue Title -->
        <TextView
            android:id="@+id/issue_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue Title"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary_modern"
            android:paddingBottom="16dp"
            android:lineSpacingExtra="2dp" />

        <!-- Contact Card -->
        <LinearLayout
            android:id="@+id/contact_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/contact_card_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Contact Photo -->
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/rep_image"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circle_avatar_background"
                    android:scaleType="centerCrop"
                    android:contentDescription="Representative photo" />

                <TextView
                    android:id="@+id/contact_initials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- Contact Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_modern"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/contact_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_modern"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Phone Number Section -->
        <LinearLayout
            android:id="@+id/phone_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Copied Phone Number Feedback -->
            <TextView
                android:id="@+id/copied_phone_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Copied: (555) 123-4567"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_modern"
                android:gravity="end"
                android:visibility="gone"
                android:paddingBottom="4dp" />

            <!-- Phone Number with Local Office Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(555) 123-4567"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/afa_dark_blue_text"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />

                <!-- Local Office Menu Button (iOS-style ellipsis) -->
                <ImageButton
                    android:id="@+id/local_office_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_more_horiz_24dp"
                    android:background="@drawable/circle_button_background"
                    android:scaleType="center"
                    android:contentDescription="Local office numbers"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Local Offices Section -->
        <LinearLayout
            android:id="@+id/field_office_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/field_office_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_modern"
                android:paddingBottom="8dp" />

        </LinearLayout>



        <!-- Script Text -->
        <TextView
            android:id="@+id/call_script"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_primary_modern"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Outcome Buttons -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/outcome_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>