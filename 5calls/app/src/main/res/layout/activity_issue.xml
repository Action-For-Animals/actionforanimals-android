<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Issue Title -->
        <TextView
            android:id="@+id/issue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary_modern"
            android:paddingBottom="8dp"
            android:lineSpacingExtra="2dp" />

        <!-- Issue Description -->
        <TextView
            android:id="@+id/issue_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_primary_modern"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp"
            android:autoLink="web" />

        <!-- Location Setup Section (shown when no location is set for political campaigns) -->
        <LinearLayout
            android:id="@+id/location_setup_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_location_header"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_modern"
                android:paddingStart="6dp"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/set_location_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/set_location"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/white"
                android:background="@drawable/primary_button_background"
                android:drawableStart="@drawable/ic_location_on"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textAllCaps="false" />

        </LinearLayout>

        <!-- Contacts Section -->
        <LinearLayout
            android:id="@+id/contacts_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Contacts Section Header -->
            <TextView
                android:id="@+id/contacts_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reps_list_header"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_modern"
                android:paddingStart="12dp"
                android:paddingBottom="2dp" />

            <!-- Contacts Container with rounded background -->
            <LinearLayout
                android:id="@+id/contacts_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/contacts_container_background"
                android:divider="@drawable/contact_divider"
                android:showDividers="middle"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <!-- Contact items will be added dynamically here -->

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:id="@+id/action_buttons_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Primary Action Button -->
            <Button
                android:id="@+id/primary_action_button"
                style="@style/makeCallsBtnStyle"
                android:layout_gravity="center"
                android:text="Make Calls"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:paddingHorizontal="24dp"
                android:textAllCaps="false" />

            <!-- Secondary Action Buttons Container (hidden for now) -->
            <LinearLayout
                android:id="@+id/secondary_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <!-- Placeholder for future corporate campaign buttons -->

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>

</ScrollView>