<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:gravity="center_vertical"
    android:clickable="false"
    android:focusable="false">

    <!-- Contact Photo with Completion Overlay -->
    <FrameLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="0dp">

        <!-- Circular contact photo -->
        <ImageView
            android:id="@+id/contact_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_avatar_background"
            android:scaleType="centerCrop"
            android:contentDescription="Representative photo" />

        <!-- Fallback initials (only shown if photo fails to load) -->
        <TextView
            android:id="@+id/contact_initials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:visibility="gone" />

        <!-- Completion checkmark overlay (matches iOS style) -->
        <ImageView
            android:id="@+id/completion_checkmark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/green_checkmark_circle"
            android:src="@drawable/checked_small"
            android:scaleType="center"
            android:visibility="gone"
            android:contentDescription="Call completed" />

    </FrameLayout>

    <!-- Contact Information -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- Contact Name (matches iOS font: .title3, .semibold) -->
        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/text_primary_modern"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Contact Title/Position (matches iOS .footnote) -->
        <TextView
            android:id="@+id/contact_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_primary_modern"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="1dp" />

        <!-- Contact Note (for irrelevant/vacant contacts) -->
        <TextView
            android:id="@+id/contact_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_primary_modern"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="1dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Remove navigation arrow to match iOS clean design -->

</LinearLayout>