<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    style="@style/mainContainersStyle"
    tools:context="org.a5calls.android.a5calls.controller.MainActivity">

    <RelativeLayout
        android:id="@+id/activity_main"
        style="@style/mainContainersStyle"
        android:background="@color/background_color">

        <!-- iOS-style fixed header -->
        <LinearLayout
            android:id="@+id/ios_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_color"
            android:paddingTop="16dp">

            <!-- MainHeader: Settings + Location + Stars -->
            <LinearLayout
                android:id="@+id/main_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical">

                <!-- Settings gear icon -->
                <ImageView
                    android:id="@+id/settings_gear"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:scaleType="centerInside"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:tint="@color/text_primary_modern"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:contentDescription="Settings" />

                <!-- Spacer to center location header -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Location header (centered, wraps content) -->
                <LinearLayout
                    android:id="@+id/location_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/location_header_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- VStack equivalent for two-line location text -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="start">

                            <!-- Small descriptive text (footnote size) -->
                            <TextView
                                android:id="@+id/location_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your location is:"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:textColor="@color/text_secondary_modern"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:visibility="gone" />

                            <!-- Larger location name (title3 size, medium weight) -->
                            <TextView
                                android:id="@+id/location_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Set Your Location"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/text_primary_modern"
                                android:maxLines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <!-- Location icon (like iOS location.circle) -->
                        <ImageView
                            android:id="@+id/location_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location_on"
                            android:tint="@color/text_secondary_modern"
                            android:layout_marginStart="8dp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Spacer to center location header -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Stars branding -->
                <ImageView
                    android:id="@+id/stars_branding"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:src="@drawable/afa_stars"
                    android:scaleType="fitCenter"
                    android:contentDescription="Action for Animals" />

            </LinearLayout>

            <!-- Main title -->
            <TextView
                android:id="@+id/main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take Action For Animals"
                android:textSize="22sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text_primary_modern"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:gravity="start" />

        </LinearLayout>

        <!-- Use RelativeLayout to maintain proper positioning -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ios_header_container"
            >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/newsletterWrapperStyle"
                    android:layout_alignParentTop="true"
                    android:id="@+id/newsletter_signup_view"
                    >

                    <include
                        android:id="@+id/newsletter_view"
                        layout="@layout/newsletter_signup_view"
                        />

                </FrameLayout>

                <!-- iOS-style always-visible search bar -->
                <LinearLayout
                    android:id="@+id/search_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/newsletter_signup_view"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@color/background_color">

                    <!-- iOS-style search box with custom drawable background -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ios_search_box_background"
                        android:minHeight="44dp">

                        <ImageView
                            android:id="@+id/search_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/baseline_search_white_24"
                            android:tint="@color/text_secondary_modern"
                            android:contentDescription="Search icon" />

                        <EditText
                            android:id="@+id/search_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/search_icon"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:background="@android:color/transparent"
                            android:hint="Search Campaigns..."
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_modern"
                            android:textColorHint="@color/text_secondary_modern"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1"
                            android:minHeight="44dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp" />

                    </RelativeLayout>

                </LinearLayout>

                <!-- iOS-style horizontal category filter bar -->
                <HorizontalScrollView
                    android:id="@+id/category_filter_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/search_container"
                    android:scrollbars="none"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    android:background="@color/background_color">

                    <LinearLayout
                        android:id="@+id/category_chips_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Category filter chips will be added programmatically -->

                    </LinearLayout>

                </HorizontalScrollView>

                <!-- Use proper RecyclerView with SwipeRefreshLayout -->
                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/swipe_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/category_filter_container"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/issues_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="true" />

                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        style="@style/mainNavigationViewStyle"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_navigation" />

</androidx.drawerlayout.widget.DrawerLayout>