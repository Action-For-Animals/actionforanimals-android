<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/spacing_md"
    android:layout_marginEnd="@dimen/spacing_md"
    android:layout_marginTop="@dimen/spacing_sm"
    android:background="@android:color/transparent">

    <!-- Main preference content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/spacing_md"
        android:paddingEnd="@dimen/spacing_md"
        android:paddingTop="@dimen/spacing_md"
        android:paddingBottom="@dimen/spacing_md"
        android:minHeight="@dimen/touch_target_large"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <!-- Icon -->
        <ImageView
            android:id="@+id/preference_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:tint="@color/primary"
            android:layout_marginEnd="@dimen/spacing_md"
            android:contentDescription="@null" />

        <!-- Title -->
        <TextView
            android:id="@android:id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_subtitle"
            android:textColor="@color/on_surface"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@android:color/transparent" />

        <!-- Summary - Hidden -->
        <TextView
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Material Switch Widget -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@android:id/switch_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:focusable="false"
            android:clickable="false"
            android:enabled="true"
            android:alpha="1.0"
            app:thumbTint="@color/primary"
            app:trackTint="@color/primary_variant" />

    </LinearLayout>

    <!-- Modern separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/spacing_md"
        android:background="@color/outline" />

</LinearLayout>