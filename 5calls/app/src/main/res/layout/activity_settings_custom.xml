<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="@color/background"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:paddingTop="?attr/actionBarSize">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        
        <!-- General Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/outline_variant">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GENERAL"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:letterSpacing="0.5"
                    android:layout_marginBottom="12dp" />
                
                <!-- Notifications -->
                <LinearLayout
                    android:id="@+id/notifications_item"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/icon_background_orange"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">
                        
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_notifications"
                            android:tint="@android:color/white"
                            android:contentDescription="@null" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notifications"
                        android:textSize="16sp"
                        android:textColor="@color/on_surface"
                        android:fontFamily="sans-serif" />
                    
                    <Switch
                        android:id="@+id/notifications_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.1"
                        android:scaleY="1.1"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp"
                        android:layout_marginEnd="8dp"
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color" />
                </LinearLayout>
                
                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/outline_variant"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="16dp" />
                
                <!-- Scheduled Reminders -->
                <LinearLayout
                    android:id="@+id/reminders_item"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">
                    
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/icon_background_blue"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">
                        
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_access_time"
                            android:tint="@android:color/white"
                            android:contentDescription="@null" />
                    </LinearLayout>
                    
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_reminders"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface"
                            android:fontFamily="sans-serif" />
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_ios"
                        android:tint="@color/on_surface_variant"
                        android:contentDescription="@null" />
                </LinearLayout>
                
                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/outline_variant"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="16dp" />
                
                <!-- Feedback -->
                <LinearLayout
                    android:id="@+id/feedback_item"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">
                    
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/icon_background_purple"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">
                        
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_settings"
                            android:tint="@android:color/white"
                            android:contentDescription="@null" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Feedback"
                        android:textSize="16sp"
                        android:textColor="@color/on_surface"
                        android:fontFamily="sans-serif" />
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_ios"
                        android:tint="@color/on_surface_variant"
                        android:contentDescription="@null" />
                </LinearLayout>
                    
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Social Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/outline_variant">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SOCIAL"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:letterSpacing="0.5"
                    android:layout_marginBottom="12dp" />
                
                <!-- Instagram -->
                <LinearLayout
                    android:id="@+id/instagram_item"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">
                    
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/icon_background_pink"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">
                        
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_settings"
                            android:tint="@android:color/white"
                            android:contentDescription="@null" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Instagram"
                        android:textSize="16sp"
                        android:textColor="@color/on_surface"
                        android:fontFamily="sans-serif" />
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_ios"
                        android:tint="@color/on_surface_variant"
                        android:contentDescription="@null" />
                </LinearLayout>
                
                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/outline_variant"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="16dp" />
                
                <!-- Share App -->
                <LinearLayout
                    android:id="@+id/share_app_item"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">
                    
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/icon_background_green"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">
                        
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_settings"
                            android:tint="@android:color/white"
                            android:contentDescription="@null" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Share Action for Animals"
                        android:textSize="16sp"
                        android:textColor="@color/on_surface"
                        android:fontFamily="sans-serif" />
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_ios"
                        android:tint="@color/on_surface_variant"
                        android:contentDescription="@null" />
                </LinearLayout>
                
                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/outline_variant"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="16dp" />
                
                <!-- Rate App -->
                <LinearLayout
                    android:id="@+id/rate_app_item"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">
                    
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/icon_background_yellow"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">
                        
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_settings"
                            android:tint="@android:color/white"
                            android:contentDescription="@null" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rate Action for Animals"
                        android:textSize="16sp"
                        android:textColor="@color/on_surface"
                        android:fontFamily="sans-serif" />
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_ios"
                        android:tint="@color/on_surface_variant"
                        android:contentDescription="@null" />
                </LinearLayout>
                    
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Credits Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/outline_variant">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CREDITS"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:letterSpacing="0.5"
                    android:layout_marginBottom="12dp" />
                
                <!-- 5calls -->
                <LinearLayout
                    android:id="@+id/fivecalls_item"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">
                    
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/icon_background_red"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">
                        
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_settings"
                            android:tint="@android:color/white"
                            android:contentDescription="@null" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5calls"
                        android:textSize="16sp"
                        android:textColor="@color/on_surface"
                        android:fontFamily="sans-serif" />
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_ios"
                        android:tint="@color/on_surface_variant"
                        android:contentDescription="@null" />
                </LinearLayout>
                
                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/outline_variant"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="16dp" />
                
                <!-- Open Source Libraries -->
                <LinearLayout
                    android:id="@+id/open_source_item"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">
                    
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/icon_background_gray"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">
                        
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_settings"
                            android:tint="@android:color/white"
                            android:contentDescription="@null" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Open Source Libraries"
                        android:textSize="16sp"
                        android:textColor="@color/on_surface"
                        android:fontFamily="sans-serif" />
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_ios"
                        android:tint="@color/on_surface_variant"
                        android:contentDescription="@null" />
                </LinearLayout>
                    
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
    </LinearLayout>
</ScrollView>
